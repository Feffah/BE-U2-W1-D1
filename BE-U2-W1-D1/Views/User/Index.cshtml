@model List<BE_U2_W1_D1.Models.Entity.User>

<h1 class="text-black">Aggiungi User</h1>

<form asp-controller="User" asp-action="Index" method="post">
    <div class="mb-3">
        <label class="form-label text-black">Nome</label>
        <input type="text" class="form-control" name="Nome">
    </div>
    <div class="mb-3">
        <label class="form-label text-black">Cognome</label>
        <input type="text" class="form-control" name="Cognome">
    </div>
    <div class="mb-3">
        <label class="form-label text-black">Email</label>
        <input type="text" class="form-control" name="Email">
    </div>
    <button class="btn btn-primary" type="submit">Aggiungi User</button>

</form>

<table class="table mt-4">
    <thead>
        <tr class="text-white bg-dark">
            <th scope="col">Name</th>
            <th scope="col">Surname</th>
            <th scope="col">Email</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {

            <tr class="text-white bg-dark">

                <td>@user.Nome</td>
                <td>@user.Cognome</td>
                <td>@user.Email</td>



            </tr>

        }
    </tbody>
