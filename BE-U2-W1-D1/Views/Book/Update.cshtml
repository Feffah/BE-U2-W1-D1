@model BE_U2_W1_D1.Models.Entity.Product
@{

}
<form asp-action="Update" method="post">
    <input type="hidden" name="Id" value="@Model.Id" />
    <div class="mb-3">
        <label class="form-label text-white">Titolo</label>
        <input type="text" class="form-control" name="Titolo" value="@Model.Titolo">
    </div>

    <div class="mb-3">
        <label class="form-label text-white">Autore</label>
        <input type="text" class="form-control" name="Autore" value="@Model.Autore">
    </div>

    <div class="mb-3">
        <label class="form-label text-white">Trama</label>
        <input type="text" class="form-control" name="Trama" value="@Model.Trama">
    </div>

    <div class="mb-3">
        <label class="form-label text-white">Prezzo</label>
        <input type="number" step="0.01" class="form-control" name="Prezzo" value="@Model.Prezzo">
    </div>

    <div class="mb-3">
        <label class="form-label text-white">Copertina</label>
        <input type="text" class="form-control" name="Copertina" value="@Model.Copertina">
    </div>

    <button class="btn btn-primary type="submit">Modify Book</button>

</form>
