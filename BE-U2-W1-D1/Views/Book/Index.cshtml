@model List<BE_U2_W1_D1.Models.Entity.Product>

<h1 class="text-black">Add Book</h1>

<form asp-controller="Book" asp-action="Index" method="post">
    <div class="mb-3">
        <label class="form-label text-black">Titolo</label>
        <input type="text" class="form-control" name="Titolo">
    </div>

    <div class="mb-3">
        <label class="form-label text-black">Autore</label>
        <input type="text" class="form-control" name="Autore">
    </div>

    <div class="mb-3">
        <label class="form-label text-black">Trama</label>
        <input type="text" class="form-control" name="Trama">
    </div>

    <div class="mb-3">
        <label class="form-label text-black">Prezzo</label>
        <input type="number" step="0.01" class="form-control" name="Prezzo">
    </div>

    <div class="mb-3">
        <label class="form-label text-black">Copertina</label>
        <input type="text" class="form-control" name="Copertina">
    </div>

    <button class="btn btn-primary" type="submit">Add Book</button>

</form>



<table class="table mt-4">
    <thead>
        <tr class="text-white bg-dark">
            <th scope="col">Copertina</th>
            <th scope="col">Titolo</th>
            <th scope="col">Autore</th>
            <th scope="col">Trama</th>
            <th scope="col">Prezzo</th>
            <th scope="col">Modifica</th>
            <th scope="col">Cancella</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var update in Model)
        {

            <tr class="text-white bg-dark">
                <td>
                    <img src="@update.Copertina" alt="@update.Titolo" style="width:100px; height:auto;" />
                </td>
                <td>@update.Titolo</td>
                <td>@update.Autore</td>
                <td>@update.Trama</td>
                <td>@update.Prezzo</td>
                <td class="text-center">
                    <a asp-controller="Book" asp-action="Update" asp-route-Id="@update.Id">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                            <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                            <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5z" />
                        </svg>
                    </a>
                </td>
                <td>
                    <form asp-controller="Book" asp-action="Delete" asp-route-id="@update.Id" method="post" style="display:inline">
                        <button class="text-black" type="submit" onclick="return confirm('Sei sicuro di voler cancellare questo libro?');"
                                style="border:none; background:none; padding:0;">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash3-fill" viewBox="0 0 16 16">
                                <path d="M11 1.5v1h3.5a.5.5 0 0 1 0 1h-.538l-.853 10.66A2 2 0 0 1 11.115 16h-6.23a2 2 0 0 1-1.994-1.84L2.038 3.5H1.5a.5.5 0 0 1 0-1H5v-1A1.5 1.5 0 0 1 6.5 0h3A1.5 1.5 0 0 1 11 1.5m-5 0v1h4v-1a.5.5 0 0 0-.5-.5h-3a.5.5 0 0 0-.5.5M4.5 5.029l.5 8.5a.5.5 0 1 0 .998-.06l-.5-8.5a.5.5 0 1 0-.998.06m6.53-.528a.5.5 0 0 0-.528.47l-.5 8.5a.5.5 0 0 0 .998.058l.5-8.5a.5.5 0 0 0-.47-.528M8 4.5a.5.5 0 0 0-.5.5v8.5a.5.5 0 0 0 1 0V5a.5.5 0 0 0-.5-.5" />
                            </svg>
                        </button>
                    </form>
                </td>

            </tr>

        }
    </tbody>
